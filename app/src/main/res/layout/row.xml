<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:paddingBottom="5dp"><!-- remember the height value if too high then only show 1st line -->


    <ImageView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/row_photo_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="5dp"
        android:src="@drawable/cafe_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/item"
        android:textSize="20sp"
        android:text="Menu Item"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_photo_image"
        android:layout_toEndOf="@+id/row_photo_image"
        android:layout_marginTop="24dp" />
